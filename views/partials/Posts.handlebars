<section class="homepage-post">
    <a href="/homepage/blog/{{id}}" class="homepage-post-a">
        <div class="homepage-post-title">
            <header class="homepage-post-header">{{title}}</header>
            <p class="homepage-post-p">Created by: {{user.username}} on {{createdAt}}</p>
        </div>
        <div>
            <p class="homepage-post-p">{{content}}</p>
        </div>
    </a>
</section>